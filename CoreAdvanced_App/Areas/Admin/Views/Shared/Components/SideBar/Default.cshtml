@model List<FunctionViewModel>
<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
        <h3>Functions</h3>
        <ul class="nav side-menu">
            @foreach (var item in Model.Where(_ => string.IsNullOrEmpty(_.ParentId)))
            {
                <li>
                    <a><i class="@item.IconCss"></i> @item.Name <span class="fa fa-chevron-down"></span></a>
                    @if (Model.Any(_ => _.ParentId == item.Id))
                    {
                        <ul class="nav child_menu">
                            @foreach (var jItem in Model.Where(_ => _.ParentId == item.Id))
                            {
                                <li><a href="@jItem.URL">@jItem.Name</a></li>
                            }
                        </ul>                
                    }
                </li>            
            }
        </ul>
    </div>
</div>